@model IQueryable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Lista Gabientów";
}

<div class="float-right">
    <a asp-action="CreateRole" asp-controller="User" class="btn btn-primary">Dodaj</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nazwa</th>
            <th scope="col">Akcja</th>
        </tr>
    </thead>
    <tbody>
        @{int i = 1;}
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@i</th>
            <td>@item.Name</td>
            <td><a asp-action="RemoveRole" asp-controller="User" asp-route-id="@item.Id" type="submit" class="btn btn-danger" >Usuń</a></td>
            @{i++;}
        </tr>
        }
    </tbody>
</table>



