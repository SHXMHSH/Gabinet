@model RoleVModel
@{
    ViewData["Title"] = "Lista Gabientów";
}

<form class="form-inline" asp-controller="User" asp-action="CreateRole" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Name">Nazwa</label>
        <input type="text" asp-for="Name" class="form-control mx-sm-3" />
    </div>
    <button type="submit" class="btn btn-primary ">Dodaj</button>
</form>



